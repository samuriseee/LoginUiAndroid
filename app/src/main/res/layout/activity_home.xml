<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".HomeActivity"

    >
    <!--đây là main container-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background=" #7dbce9"
        android:orientation="horizontal">
        <!--đây là thanh navigation -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/borderbottom"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Back"
                android:textSize="22dp"
                android:drawableLeft="@drawable/lefticonarrow"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#ffff"
                    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Profile"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/settingsicon"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
        <!--đây là avatar va status-->
        <LinearLayout
            android:id="@+id/aboveContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:gravity="center"
            android:paddingBottom="25dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/useravatar"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Nguyễn Tuấn Kiệt"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#ffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="2050531200205"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#ffff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                >
                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rightborder"
                    android:paddingRight="20dp">
                    <TextView
                        android:id="@+id/above"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#ffff"
                        android:text="125"
                        android:textSize="30dp"/>
                    <TextView
                        android:layout_below="@+id/above"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="#ffff"
                        android:text="Friends"
                        android:textSize="25dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    >
                    <TextView
                        android:id="@+id/above2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="250"
                        android:textColor="#ffff"
                        android:textSize="30dp"/>
                    <TextView
                        android:layout_below="@+id/above2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="#ffff"
                        android:text="Followers"
                        android:textSize="25dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/aboveContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="40dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-105dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="email:"
                    android:textColor="#7dbce9"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextbackground"
                    android:hint="mail@gmail.com"
                    android:paddingLeft="100dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textColor="#7dbce9"
                    android:textColorHint="#7dbce9"
                    android:textSize="22dp"
                    android:textStyle="bold"></EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-35dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="phone:"
                    android:textColor="#7dbce9"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/edittexbackground3"
                    android:hint="mail@gmail.com"
                    android:paddingLeft="100dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textColor="#7dbce9"
                    android:textColorHint="#7dbce9"
                    android:textSize="22dp"
                    android:textStyle="bold"></EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="35dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="skype:"
                    android:textColor="#7dbce9"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:background="@drawable/edittexbackground3"
                    android:hint="mail@gmail.com"
                    android:paddingLeft="100dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textColor="#7dbce9"
                    android:textColorHint="#7dbce9"
                    android:textSize="22dp"
                    android:textStyle="bold"></EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="105dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="web:"
                    android:textColor="#7dbce9"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="210dp"
                    android:background="@drawable/edittextbackground2"
                    android:hint="mail@gmail.com"
                    android:paddingLeft="100dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textColor="#7dbce9"
                    android:textColorHint="#7dbce9"
                    android:textSize="22dp"
                    android:textStyle="bold"></EditText>



            </FrameLayout>

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>